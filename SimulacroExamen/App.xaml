<Application x:Class="SimulacroExamen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimulacroExamen"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Image" x:Key="bgImg">
            <Setter Property="Source" Value="img/newyork1.jpg"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Source" Value="img/newyork2.jpg"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock" x:Key="title">
            <Setter Property="FontSize" Value="32"/>
        </Style>
         
    </Application.Resources>
</Application>
